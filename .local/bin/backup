#!/bin/bash

ignore=( '.cache' '.cargo' '.mozilla' '.pki' '.rustup' '.Xauthority' '.zoom' 'Videos' '.local/aur' '.local/share/vifm/Trash' 'Downloads' '.stack' )

if [[ -d /mnt/drive/Backup ]]; then
    :
elif [[ -L /dev/disk/by-label/sam-barr-hdd ]]; then
    read -p "Your hard drive is plugged in but not mounted. Would you like to mount it? [yN] " -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        mount -L sam-barr-hdd
        did_mount=true
    else
        exit
    fi
else
    echo Please plugin your hard drive
    exit
fi

if [[ "$1" = list ]]; then
    borg list /mnt/drive/Backup
elif [[ "$1" == delete ]]; then
    if [[ "$#" == 2 ]]; then
        borg delete /mnt/drive/Backup::"$2"
    else
        echo Please specify an archive to delete
    fi
elif [[ "$1" == info ]]; then
    borg info /mnt/drive/Backup
else
    borg create /mnt/drive/Backup::"$(date +%d_%m_%Y)" "$HOME" \
        --progress --stats \
        "${ignore[@]/#/--exclude=$HOME\/}" \
        --compression lzma,6
fi

if [[ "$did_mount" = true ]]; then
    read -p "Do you wish to unmount your hard drive? [yN] " -n 1 -r
    echo
    if [[ $REPLY  =~ ^[Yy]$ ]]; then
        umount /mnt/drive
    fi
fi
