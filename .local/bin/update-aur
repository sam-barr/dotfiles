#!/bin/bash

aur_dir=$HOME/.local/aur

ignore=( "zsa-wally-cli" "epubcheck" "godot" )

declare -A arr
for pkg in "${ignore[@]}"
do
    arr[$aur_dir/$pkg/]=1
done

for pkg in "$aur_dir"/*/;
do
    [[ ${arr[$pkg]} ]] && continue

    pushd "$pkg" > /dev/null || exit

    if [[ "$(git pull)" == "Already up to date." ]];
    then
        echo "$(basename "$(pwd)")" is up to date.
    else
        echo "$(basename "$(pwd)")" has an update.
        makepkg -sricf
    fi

    popd > /dev/null || exit
done
