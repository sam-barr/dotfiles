#!/bin/bash

if [[ "$#" != 1 ]]; then
    echo "Please provide 1 argument"
    exit
fi

mkdir "$1"
cd "$1" || exit
cp ~/.local/template/x.tex x.tex
ln -s x.pdf "$1".pdf
latexmk -pdf x.tex &> /dev/null

cp ~/.local/template/latex.gitignore .gitignore
echo "$1".pdf >> .gitignore
git init > /dev/null
git add . > /dev/null
git commit -m "Initial Commit" > /dev/null
